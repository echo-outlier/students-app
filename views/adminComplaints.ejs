<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/dashboard/styles.css" />
    <link rel="stylesheet" href="/studentRequest/style.css" />
    <title>Student Dashboard</title>
    <link rel="shortcut icon" href="/home/favicon.png" type="image/x-icon" />
  </head>
  <body id="body">
    <div class="container-dashboard">
      <nav class="navbar-dashboard">
        <div class="nav_icon" onclick="toggleSidebar()">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </div>
        <div class="navbar__left">
          <!-- <a href="#">Subscribers</a>
          <a href="#">Video Management</a> -->
          <a class="active_link" href="#">Student</a>
        </div>
        <div class="navbar__right">
          <a href="#">
            <img width="50" src="/dashboard/assets/avatar.png" alt="" />
            <!-- <i class="fa fa-user-circle-o" aria-hidden="true"></i> -->
          </a>
        </div>
      </nav>

      <main>
        <div class="main__container">
          <div class="section-title">
            <h2>COMPLAINTS</h2>
          </div>
          <div class="new-sort">
            <% if(query == "progress") { %>
            <div class="dropdown">
              <button class="dropbtn">IN PROGRESS</button>
              <div class="dropdown-content">
                <a href="/user/complaint/get">ALL</a>
                <a href="/user/complaint/get?query=resolved">RESOLVED</a>
              </div>
            </div>
            <% } else if(query == "resolved") { %>
            <div class="dropdown">
              <button class="dropbtn">RESOLVED</button>
              <div class="dropdown-content">
                <a href="/user/complaint/get">ALL</a>
                <a href="/user/complaint/get?query=progress">IN PROGRESS</a>
              </div>
            </div>
            <% } else { %>
            <div class="dropdown">
              <button class="dropbtn">ALL</button>
              <div class="dropdown-content">
                <a href="/user/complaint/get?query=progress">IN PROGRESS</a>
                <a href="/user/complaint/get?query=resolved">RESOLVED</a>
              </div>
            </div>
            <% } %>
          </div>
          <% all.forEach( e => { %>
          <div class="body-class" style="margin: 20px">
            <div class="cards" style="border-left: 1.5px solid <%= e.color%>">
              <div class="contact"><%=e.tags%></div>

              <div class="card active" id="overview">
                <div class="card-content">
                  <div class="row">
                    <div class="left col">
                      <h2><strong><%= e.title %></strong></h2>

                      <p><%= e.description %></p>
                      <p>
                        <span class="date"><%= e.date %></span>
                        <span class="status"
                          >STATUS :
                          <span
                            ><input
                              id="changeButton"
                              class="learn-more"
                              onclick="change()"
                              type="button"
                              value="IN PROGRESS"
                          /></span>
                          <% if(e.status == "RESOLVED") { %>
                          <span class="check">&#10004;</span>
                          <% } else if(e.status == "IN PROGRESS") { %>
                          <span class="uncheck"> &#33;</span>
                          <% } else { %> <% } %>
                        </span>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </main>

      <div id="sidebar">
        <div class="sidebar__title">
          <div class="sidebar__img">
            <img src="/dashboard/assets/student.png" alt="logo" />
            <h1>Admin</h1>
          </div>
          <i
            onclick="closeSidebar()"
            class="fa fa-times"
            id="sidebarIcon"
            aria-hidden="true"
          ></i>
        </div>

        <div class="sidebar__menu">
          <div class="sidebar__link">
            <i class="fa fa-home"></i>
            <a href="/admin/home">Dashboard</a>
          </div>
          <h2>Class</h2>
          <div class="sidebar__link ">
            <i class="fa fa-user-secret" aria-hidden="true"></i>
            <a href="/admin/attendance">Attendance</a>
          </div>
          <h2>College</h2>
          <div class="sidebar__link">
            <i class="fa fa-question"></i>
            <a href="/admin/studentRequests/get">Student Requests</a>
          </div>
          <div class="sidebar__link active_menu_link">
            <i class="fa fa-sign-out"></i>
            <a href="/admin/complaint/get">Complaints</a>
          </div>

          <div class="sidebar__logout">
            <i class="fa fa-power-off"></i>
            <a
              onclick="document.getElementById('logout').submit();"
              style="cursor: pointer"
              >Log out</a
            >
          </div>
        </div>
      </div>
    </div>
    <form id="logout" method="post" action="/user/logout"></form>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/dashboard/script.js"></script>
    <script>
      function change() {
        if (document.getElementById("changeButton").value == "IN PROGRESS") {
          document.getElementById("changeButton").value = "RESOLVED";
        }
      }
    </script>
  </body>
</html>
